# Configuration Wisherr - Exemple
# Copiez ce fichier en .env et configurez les valeurs

# ======================
# Database
# ======================
DATABASE_URL=postgresql://wisherr:wisherr@db:5432/wisherr

# ======================
# Security & Auth
# ======================
# IMPORTANT: Générez une clé secrète forte avec: openssl rand -hex 32
SECRET_KEY=votre_cle_secrete_de_32_caracteres_minimum_ici_changez_moi

# Authentification locale (username/password)
ENABLE_LOCAL_AUTH=true

# Authentification OIDC (optionnel)
ENABLE_OIDC_AUTH=false
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_DISCOVERY_URL=

# ======================
# CORS - Origins autorisés
# ======================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000

# ======================
# Frontend
# ======================
REACT_APP_API_URL=http://localhost:8000

# ======================
# Cache & Performance (optionnel)
# ======================
REDIS_HOST=
REDIS_PORT=6379

# ======================
# Monitoring & Health
# ======================
# Hosts externes à vérifier dans /api/health (optionnel)
HEALTH_EXTERNAL_HOSTS=

# ======================
# Admin User (création au démarrage)
# ======================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
# Doit respecter: 8+ chars, 1 majuscule, 1 minuscule, 1 chiffre, 1 caractère spécial
ADMIN_PASSWORD=Admin123!

# ======================
# Localisation
# ======================
LOCALE=fr

# ======================
# Site Configuration
# ======================
# Titre du site (affiché dans le navigateur et le footer)
SITE_TITLE=Wisherr
